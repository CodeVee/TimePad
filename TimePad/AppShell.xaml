<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TimePad.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TimePad.Pages"
    Shell.FlyoutBehavior="Disabled">


    <TabBar>
        <ShellContent
            Shell.NavBarIsVisible="False"
            Icon="time_outline.svg"
            ContentTemplate="{DataTemplate local:ProjectListPage}" />
        <ShellContent
            Icon="icon_add.svg"
            ContentTemplate="{DataTemplate local:ProjectFormPage}" />
        <ShellContent
            Icon="pie_chart.svg"
            ContentTemplate="{DataTemplate local:ProjectChartPage}" />

    </TabBar>
    

</Shell>
